{
  "name": "vdoninja-sdk",
  "version": "1.1.0",
  "description": "AI-friendly P2P communication SDK for audio, video, and data",
  "main": "vdoninja-sdk.js",
  "scripts": {
    "build": "npm run minify",
    "minify": "terser vdoninja-sdk.js -o vdoninja-sdk.min.js --compress --mangle",
    "watch": "npm-watch",
    "test:node": "node demos/node-example.js",
    "check:webrtc": "node -e \"console.log(require('./vdoninja-sdk-node.js').checkWebRTCSupport())\"",
    "ssn:listen": "node demos/socialstreamninja-listener.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/steveseguin/ninjasdk.git"
  },
  "keywords": [
    "webrtc",
    "p2p",
    "peer-to-peer",
    "video",
    "audio",
    "streaming",
    "vdo.ninja",
    "ai-friendly",
    "data-channel"
  ],
  "author": "Steve Seguin",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/steveseguin/ninjasdk/issues"
  },
  "homepage": "https://github.com/steveseguin/ninjasdk#readme",
  "devDependencies": {
    "npm-watch": "^0.13.0",
    "terser": "^5.31.0"
  },
  "optionalDependencies": {
    "@roamhq/wrtc": "^0.9.0",
    "node-datachannel": "^0.11.0"
  },
  "peerDependencies": {
    "node-datachannel": "^0.11.0"
  },
  "peerDependenciesMeta": {
    "@roamhq/wrtc": {
      "optional": true
    },
    "node-datachannel": {
      "optional": true
    }
  },
  "watch": {
    "build": {
      "patterns": [
        "vdoninja-sdk.js"
      ],
      "extensions": "js"
    }
  },
  "dependencies": {
    "abort-controller": "^3.0.0",
    "ws": "^8.18.3"
  }
}
